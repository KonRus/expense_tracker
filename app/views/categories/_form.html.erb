<div class="container">
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-info text-white">
      <h4 class="mb-0">Add or Edit Category</h4>
    </div>
    <div class="card-body">
      <% if @category.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h5>
          <ul>
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @category, local: true do |form| %>
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="form-group">
              <%= form.label :name, class: 'font-weight-bold' %>
              <%= form.text_field :name, class: 'form-control', placeholder: "Enter category name" %>
            </div>

            <div class="text-right">
              <%= form.submit "Save Category", class: 'btn btn-success px-4' %>
              <%= link_to 'Cancel', categories_path, class: 'btn btn-secondary px-4 ml-2' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
