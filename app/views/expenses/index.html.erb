<h1 class="my-4">Your Expenses</h1>

<%= link_to 'Add New Expense', new_expense_path, class: 'btn btn-primary mb-3' %>
<%= link_to 'Add New Category', new_category_path, class: 'btn btn-primary mb-3' %>


<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.title %></td>
        <td><%= number_to_currency(expense.amount) %></td>
        <td><%= expense.date %></td>
        <td><%= expense.category&.name %></td>
        <td>
          <%= link_to 'Show', expense_path(expense), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_expense_path(expense), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', expense, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
    <%= paginate @expenses %>

  </tbody>
</table>
